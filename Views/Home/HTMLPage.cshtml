}
<h2 class="text-center">Create New User</h2>
<form method="post" action="/Home/Submit">
    <div class="row-mt-2">
        <div class="col-sm-8 offset-sm-2">
            <div class="card">
                <div class="card-header fw-bold text-center">
                    Employee Details
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" name="Name" id="Name" class="form-control" placeholder="Enter Name" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="Email" id="Email" placeholder="Enter Email" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" name="Phonenum" id="Phonenum" class="form-control" placeholder="Enter Phone Num" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Gender</label>
                                <br />
                                <span>MALE</span>
                                <input type="radio" name="Gender" id="GenderMale" value="0" />
                                <span>FEMALE</span>
                                <input type="radio" name="Gender" id="GenderMale" value="1" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Age</label>
                                <input type="number" name="Age" id="Age" class="form-control" placeholder="Enter Age" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Departments</label>
                                <select name="Dept" id="Dept" class="form-select">
                                    @for (int j = 0; j < Dept.Rows.Count; j++)
                                    {
                                        <option value="@Dept.Rows[j]["Id"].ToString()">@Dept.Rows[j]["Name"].ToString()</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Salary</label>
                                <input type="number" name="Salary" id="Salary" class="form-control" placeholder="Enter Salary" />
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Address</label>
                                <textarea type="text" id="Address" name="Address" rows="3" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Country</label>
                                <select name="Country" id="Country" class="form-select">
                                    @for (int j = 0; j < Country.Rows.Count; j++)
                                    {
                                        <option value="@Country.Rows[j]["Id"].ToString()">@Country.Rows[j]["Name"].ToString()</option>
                                    }
                                </select>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 justify-content-xxl-center">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary form-control">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
