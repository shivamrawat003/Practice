    System.Data.DataTable dt = Practice.Models.AllProcs.GetEmployees();
    System.Data.DataTable Country = Practice.Models.AllProcs.Country_Select();
    System.Data.DataTable Dept = Practice.Models.AllProcs.Dept_Select();
